        "ip": "^1.1.5",
        "lodash": "^4.17.21",
        "lz-string": "^1.4.4",
        "module-alias": "^2.2.2",
        "reflect-metadata": "^0.1.13",
        "semver": "^7.3.5",
        "simple-hosts": "^1.2.3",
        "systeminformation": "^5.9.9",
        "tapable": "^2.2.1",
        "which": "^2.0.2",
