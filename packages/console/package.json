        "@types/lodash": "^4.14.176",
        "@types/node": "^16.11.6",
        "@types/semver": "^7.3.9",
        "@types/systeminformation": "^3.54.1",
        "@types/which": "^2.0.1",
        "@types/yargs": "^17.0.5",
        "@types/yargs-parser": "^20.2.1"
    },
    "keywords": [
        "class",
        "cli",
        "commands",
        "decorators",
        "yargs"
    ],
    "bugs": {
        "email": "rradic@hotmail.com",
        "url": "https://github.com/robinradic/npm-packages/issues"
    },
    "engines": {
        "node": ">=12"
    },
    "files": [
        "lib/**/*"
    ],
    "os": [
        "darwin",
        "linux"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
